<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.luerer.dao.ItermDao">
    <resultMap id="iterm" type="Iterm">
        <result column="iterm_id" property="iterm_id" />
        <result column="iterm_name" property="iterm_name" />
        <result column="iterm_price" property="iterm_price" />
        <result column="iterm_stock" property="iterm_stock"/>
        <result column="iterm_info" property="iterm_info"/>
        <result column="iterm_type" property="iterm_type"/>
    </resultMap>

    <select id="searchByName" resultMap="iterm">
        select * from iterms where iterm_name = #{arg0};
    </select>

    <select id="searchById" resultMap="iterm">
        select * from iterms where iterm_id = #{iterm_id};
    </select>

    <select id="listall" resultMap="iterm">
        select * from iterms;
    </select>
</mapper>